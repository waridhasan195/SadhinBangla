@model SadhinBangla.Models.ViewModels.LoginViewModel

@{
}



<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Login</h1>
        </div>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">UserName</label>
                <input class="form-control" type="text" id="username" asp-for="UserName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input class="form-control" type="password" id="password" asp-for="Password" />
            </div>
            <div class="mb-3">
                <button class="btn btn-dark">Login</button>
            </div>
            <input  type="hidden" asp-for = "ReturnUrl"/>
        </form>
    </div>

</div>