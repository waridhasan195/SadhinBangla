@{

}
@model SadhinBangla.Models.ViewModels.AddTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-2">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" id="name" asp-for="Name" placeholder="Don't use any space and special characters." required/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mb-2">
            <label class="form-label">Display Name</label>
            <input class="form-control" type="text" id="displayName" asp-for="DisplayName" required />
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>
        <div class="mb-2">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>